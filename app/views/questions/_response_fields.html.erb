<fieldset class="row">
  <div class="col-sm-2">
      <%= f.label :content %>
  </div>
  <div class="col-sm-8">
      <%= f.input_field :content, class: "string optional form-control" %>
  </div>
  <div class="col-sm-2">
      <%= f.input :_destroy, as: :hidden %>
      <%= link_to "remove", '#', class: "remove_fields btn btn-danger" %>
  </div>
</fieldset>