<div class="comment-form">
 <%= form_for(Comment.new) do |f| %>
  <div class="field">
    <%= f.text_field :name, placeholder: 'Imię', class: 'form-control' %>
  </div>
  <div class="field">
    <%= f.text_area :message, placeholder: 'Treść', rows: '5', class: 'form-control' %>
  </div>
  <%= hidden_field_tag :post_id, post.id %>
  <div class="actions text-right">
    <%= f.submit "Komentuj", class: "btn btn-success" %>
  </div>
 <% end %>
</div>