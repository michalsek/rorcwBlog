<%= form_for(Comment.new) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :message %><br>
    <%= f.text_area :message %>
  </div>
  <%= hidden_field_tag :post_id, post.id %>
  <div class="actions">
    <%= f.submit "Komentuj" %>
  </div>
<% end %>
